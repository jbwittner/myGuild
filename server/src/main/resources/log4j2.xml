<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <RollingFile name="RollingFile" fileName="logs/jarvis.log"
                     filePattern="logs/$${date:yyyy-MM}/jarvis_%d{MM-dd-yyyy}_%d{HH-mm}_%i.log">
            <PatternLayout pattern="%d{dd MM yyyy}\t%d{HH:mm:ss.SSS}\t%t\t%-5level\t%logger{1.}\t%msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingFile>
        <RollingFile name="JSONRollingFile" fileName="logs/jarvis_json.log"
                     filePattern="logs/$${date:yyyy-MM}/jarvis_%d{MM-dd-yyyy}_%d{HH-mm}_json_%i.log">
            <JSONLayout complete="true" compact="false"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingFile>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd MM yyyy} - %d{HH:mm:ss.SSS} - %t - %-5level - %logger{1.} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root>
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="JSONRollingFile"/>
        </Root>
    </Loggers>
</Configuration>